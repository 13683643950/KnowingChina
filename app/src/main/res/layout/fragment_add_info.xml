<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.frank.wuhanjikong.fragment.AddInfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <include
        android:id="@+id/publish_title"
        layout="@layout/back_title"
        layout_width="match_parent"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <Button
        android:id="@+id/button20"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/sent"
        android:textColor="@color/green" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="80dp"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2"
                android:background="@drawable/editext_shape"
                android:ems="10"
                android:gravity="center"
                android:focusable="true"
                android:hint="say something......."
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/camera"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Photo/Video"
                android:focusable="false"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/point_of_interest"
                android:drawablePadding="15dp"
                android:ems="10"
                android:focusable="false"
                android:hint="location"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:drawableLeft="@drawable/tags"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Theme"
                android:inputType="textPersonName"
                android:textSize="20sp" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
